// for loop runs until the conditionExpression is false
for ([initialExpression]; [conditionExpression]; [incrementExpression])
  statement

//do... while loops first execute the statement then evaluates the condition, runs until condition is false
do
  statement
while (condition);

//while loops first evaluate the condition, and if it is true, executes the statement, runs until condition is false
while (condition)
  statement

//labeled statements can be referenced throughout the code, label can be any unreserved javascript identifier
label :
  statement

//break statements, first is for innermost loop and switch, and second is to terminate a label statement
break;
break [label];

//continue statements continue label statements
continue [label];

//for... in loops iterate a specified variable over all the enumerable properties of an object
for (variable in object)
  statement

//for... of loops iterate of iterable objects
for (variable of object)
  statement